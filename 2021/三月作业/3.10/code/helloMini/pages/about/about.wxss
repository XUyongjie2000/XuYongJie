  justify-content: space-around;
}

.container>view {
  width: 100px;
  height: 100px;
  line-height: 100px;
  text-align: center;
}

.a {
  background-color: #90ee90;
}

.b {
  background-color: #87cefa;
}

.c {
  background-color: #f08080;
}

/* 轮播图 */
